    "TemplateRulesByDeviceInterrogation": [
        { "InterrogationFunction": "return (device.capabilities['Color Control']!==undefined)", "Templates": ["LightBulb"] }
    ],
    "Templates": {
      "LightBulb": {
        "templateType": "Main",
        "platform": "SmartThings",
        "AddServices": [
          {
            "ServiceName": "Lightbulb",
            "AddCharacteristics": [
              {
                "name": "On",
                "read": "callback(null, (device.attributes.switch == 'on'));",
                "write": "if (value) { device.action.on(callback); } else { device.action.off(callback) }",
                "usedAttributes": [
                  "switch"
                ]
              }
            ]
          }
        ]
      },
      "LightBulb_brightness": {
        "platform": "SmartThings",
        "GetServices": [
          {
            "ServiceName": "Lightbulb",
            "AddCharacteristics": [
              {
                "name": "Brightness",
                "read": "callback(null, (device.attributes.level));",
                "write": "device.action.setLevel(callback, value);",
                "usedAttributes": [
                  "level"
                ]
              }
            ]
          }
        ]
      },
      "LightBulb_Color": {
        "platform": "SmartThings",
        "GetServices": [
          {
            "ServiceName": "Lightbulb",
            "AddCharacteristics": [
              {
                "name": "Hue",
                "read": "callback(null, Math.round(device.attributes.hue*3.6));",
                "write": "device.actions.setHue(callback, Math.round(value/3.6));",
                "usedAttributes": [
                  "hue"
                ]
              },
              {
                "name": "Saturation",
                "read": "return device.attributes.saturation;",
                "write": "device.actions.setSaturation(value);",
                "usedAttributes": [
                  "saturation"
                ]
              }
            ]
          }
        ]
      },
